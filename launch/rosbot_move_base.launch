<launch>

    <node pkg="drive_controller" type="drive_controller_node" name="drive_controller_node" />
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find drive_controller)/rviz/config_file.rviz" />

    <node pkg="gmapping" type="slam_gmapping" name="gmapping">
        <param name="base_frame" value="base_link"/>
        <param name="odom_frame" value="odom" />
        <param name="delta" value="0.05" />
    </node>

    <node pkg="move_base" type="move_base" name="move_base" output="screen">
        <param name="controller_frequency" value="10.0"/>
        <rosparam file="$(find drive_controller)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find drive_controller)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find drive_controller)/config/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find drive_controller)/config/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find drive_controller)/config/trajectory_planner.yaml" command="load" />
    </node>

</launch>
